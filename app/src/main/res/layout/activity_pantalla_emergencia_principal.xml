<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaEmergenciaPrincipal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ln1"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/btnMiPerfilPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:src="@drawable/btn4_3"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/btnMisContactosPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:src="@drawable/btn4_4"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnCentroSaludPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:src="@drawable/btn4_5"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#b60000">

            <ImageView
                android:id="@+id/backgroundButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/pantalla4"
                android:layout_alignParentBottom="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnAyudaAOtrosPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="50dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:src="@drawable/btn4_2"
                    android:layout_weight="7"
                    android:layout_marginVertical="10dp"
                    android:paddingHorizontal="20dp"/>

                <ImageButton
                    android:id="@+id/btnEmergenciaPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="50dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn4_1"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="3"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="left"
            android:layout_weight="3"
            android:paddingBottom="25dp">

            <ImageButton
                android:id="@+id/imageButtonCerrarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/btncerrarsesion"
                android:layout_marginHorizontal="30dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>